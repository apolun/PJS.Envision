@using Orchard.ContentManagement;
@using PJS.Envision.Models;

@{
    var settings = WorkContext.CurrentSite.As<EnvisionThemeSettingsPart>();

    var imgPath = "data:image/webp;base64,";
    var img2xPath = Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/logo@2x.png"));
    
    switch (settings.Skin) {
        case ("green"):
            imgPath = "data:image/webp;base64,";
            img2xPath = Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/logo-green@2x.png"));
            break;
        case ("brown"):
            imgPath = "";
            img2xPath = Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/logo-brown@2x.png"));
            break;
        case ("orange"):
            imgPath = "data:image/webp;base64,";
            img2xPath = Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/logo-orange@2x.png"));
            break;
        case ("orange-light-footer"):
            imgPath = "data:image/webp;base64,";
            img2xPath = Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/logo-orange@2x.png"));
            break;
        case ("yellow"):
            imgPath = "data:image/webp;base64,";
            img2xPath = Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/logo-yellow@2x.png"));
            break;
        case ("dark-blue"):
            imgPath = "data:image/webp;base64,";
            img2xPath = Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/logo-dark-blue@2x.png"));
            break;
    }
}

<div id="logo">
    <a href="@Href("~/")">
        <img id="logo-desktop" class="visible-desktop" src="@imgPath" data-at2x="@img2xPath" alt="@WorkContext.CurrentSite.SiteName" style="margin-top: 40px; margin-bottom: 40px;">
        <img id="logo-tablet" class="visible-tablet" src="@imgPath" data-at2x="@img2xPath" alt="@WorkContext.CurrentSite.SiteName" style="margin-top: 40px;  margin-bottom: 20px;">
        <img id="logo-phone" class="visible-phone " src="@imgPath" data-at2x="@img2xPath" alt="@WorkContext.CurrentSite.SiteName" style="margin-top: 20px;  margin-bottom: 20px;">
    </a>
</div>