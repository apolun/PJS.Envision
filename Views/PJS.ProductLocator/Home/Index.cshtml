@{
    string productName = ViewData["ProductName"] != string.Empty ? ViewData["ProductName"].ToString() : "Product";
    string mapMarkerUrl = ViewData["MapMarkerUrl"] != string.Empty ? ViewData["MapMarkerUrl"].ToString() : "/Modules/PJS.ProductLocator/Content/map-marker.png";
    string googleMapsApiKey = ViewData["GoogleMapsApiKey"] != null ? "key=" + ViewData["GoogleMapsApiKey"].ToString() + "&amp;" : string.Empty;

    Layout.Title = T(productName) + " " + T("Locations");

    Script.Require("jQuery");
    Script.Require("ValidationEngine-en");
    Script.Require("ValidationEngine");
    Script.Include("http://maps.googleapis.com/maps/api/js?" + googleMapsApiKey + "sensor=true");

    Style.Require("ValidationEngine");
    Style.Require("ProductLocator");
}

@using (Script.Foot()) {
    <script type="text/html" id="marker_template">
        <div class="marker-template">
            <h3>
                <strong>{{title}}</strong><br />
                <span style="font-size: .75em;">{{distributor}}</span>
            </h3>
            <h6>{{address}}</h6>
            <h6>{{phone}}</h6>
            <h6>{{url}}</h6>
            <h6>{{products}}</h6>
        </div>
    </script>

    <script type="text/javascript">
        var map;
        var markers = [];
        var divCounter;

        function getLocations(lat, lng) {
            for (var i = 0; i < markers.length; i++) {
                markers[i].setMap(null);
            }

            markers = [];

            jQuery.ajax({
                type: 'GET',
                url: '/FindProductLocations',
                cache: false,
                data: {
                    lat: lat,
                    lng: lng,
                    radius: jQuery('#radius').val() * 1609,
                    __RequestVerificationToken: '@Html.AntiForgeryTokenValueOrchard()'
                },
                datatype: 'json',
                success: function (result) {
                    jQuery('#locations').html('');
                    jQuery('#locationsFound').html(result.length);

                    divCounter = 1;

                    if (result.length != 0) {
                        var locationString = "";

                        jQuery.each(result, function (index) {
                            var template = jQuery('#marker_template').text();
                            var content = template.replace(/{{title}}/g, result[index].LocationTitle).replace(/{{address}}/g, result[index].LocationAddress.replace(',', '<br/>')).replace(/{{phone}}/g, (result[index].LocationPhone ? '<strong>Phone:</strong> ' + result[index].LocationPhone : '')).replace(/{{url}}/g, (result[index].LocationUrl ? '<strong>Website: </strong><a href="' + result[index].LocationUrl + '" target="_blank">' + result[index].LocationUrl + '</a>' : '')).replace(/{{distributor}}/g, (result[index].Distributor ? 'Authorized Distributor' : '')).replace(/{{products}}/g, result[index].LocationProducts ? '<strong>@string.Concat(productName,"(s)"):</strong> ' + result[index].LocationProducts.replace(/(?:\r\n|\r|\n)/g, ', ') : '');
                            var icon = '@mapMarkerUrl';

                            var marker = new google.maps.Marker({
                                position: new google.maps.LatLng(result[index].LocationLatitude, result[index].LocationLongitude),
                                icon: icon,
                                map: map
                            });

                            var infowindow = new google.maps.InfoWindow({
                                content: content
                            });

                            google.maps.event.addListener(marker, 'click', function () {
                                infowindow.open(map, marker);
                            });

                            markers.push(marker);

                            locationString +=
                                (divCounter == 1 ? "<div class=\"ui-row row\">" : "")
                                    + "<div class=\"ui-column span4\">"
                                        + "<h3><strong>" + result[index].LocationTitle + "</strong></h3>"
                                        + "<h6>(" + result[index].Distance.toFixed(1) + " miles)</h6>"
                                        + "<h6>" + result[index].LocationAddress.replace(',', '<br />') + "</h6>"
                                        + "<h6>" + (result[index].LocationPhone ? '<strong>Phone:</strong> ' + result[index].LocationPhone : '') + "</h6>"
                                        + "<h6>" + (result[index].LocationUrl ? '<strong>Website:</strong> <a href="' + result[index].LocationUrl + '" target="_blank">' + result[index].LocationUrl : '') + "</a></h6>"
                                        + "<h6>" + (result[index].LocationProducts ? '<strong>@string.Concat(productName,"(s)")</strong>: ' + result[index].LocationProducts.replace(/(?:\r\n|\r|\n)/g, ', ') : '') + "</h6>"
                                        + "<h6>" + (result[index].LocationNotes ? '<strong>Notes:</strong> ' + result[index].LocationNotes : '') + "</h6>"
                                    + "</div>"
                                + ((divCounter % 3) === 0 ? "</div><div class=\"ui-row row\">" : "")

                            divCounter++;
                        });

                        locationString += "</div>";

                        jQuery('#locations').append(locationString);
                    }
                },
                error: function (req, status, error) {
                }
            });
        }

        function showMap(lat, lng) {
            var mapOptions = {
                center: new google.maps.LatLng(lat, lng),
                streetViewControl: false,
                panControl: false,
                mapTypeControl: false,
                overviewMapControl: false
            };

            map = new google.maps.Map(document.getElementById('googlemaps'), mapOptions);

            var latlng = new google.maps.LatLng(lat, lng);
            var radius = 50 * 1609;

            var circle = new google.maps.Circle({
                radius: radius,
                center: latlng,
                map: map,
                strokeOpacity: 0,
                fillOpacity: 0
            });

            map.fitBounds(circle.getBounds());

            google.maps.event.addListener(map, 'dragend', function () {
                var newLatLng = map.getCenter();

                getLocations(newLatLng.lat(), newLatLng.lng());
            });

            getLocations(lat, lng);
        }

        function showAddress() {
            var geocoder = new google.maps.Geocoder();

            geocoder.geocode({
                'address': jQuery('#city').val() + jQuery('#state').val() + jQuery('#zip').val() + jQuery('#country').val()
            }, function (results, status) {
                if (status == google.maps.GeocoderStatus.OK) {
                    var latlng = results[0].geometry.location;
                    var radius = jQuery('#radius').val() * 1609;

                    var circle = new google.maps.Circle({
                        radius: radius,
                        center: latlng,
                        map: map,
                        strokeOpacity: 0,
                        fillOpacity: 0
                    });

                    map.fitBounds(circle.getBounds());

                    getLocations(results[0].geometry.location.lat(), results[0].geometry.location.lng());
                }
            });
        }

        function locationFound(position) {
            showMap(position.coords.latitude, position.coords.longitude);
        }

        function defaultLocation() {
            showMap(38.5895961, -121.2602617);
        }

        jQuery(function () {
            jQuery('form').validationEngine('attach', {
                onValidationComplete: function (form, status) {
                    if (status) {
                        showAddress();
                    }
                },
                promptPosition: 'centerRight'
            });

            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(locationFound, defaultLocation);
            }
            else {
                defaultLocation();
            }
        });
    </script>
}

